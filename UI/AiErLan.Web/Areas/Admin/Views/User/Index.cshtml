<script>
    function Edit(id, type) {
        jQuery('#modal-6 .modal-content').html("正在加载……");
        jQuery('#modal-6').modal('show', { backdrop: 'static' });
        jQuery('#modal-5').css('max-height', jQuery(window).height());
        var url = "";
        if (id == -1) {
            url = "/Power/EditView?type=" + type;
        } else {
            url = "/Power/EditView?type=" + type + "&&ID=" + id;
        }
        jQuery.ajax({
            url: url,
            success: function (response) {
                jQuery('#modal-6 .modal-content').html(response);
            }
        });

    }
</script>
